{
  "name": "conhos-vscode",
  "version": "0.0.3",
  "displayName": "Conhos",
  "publisher": "kolserdav",
  "icon": "resources/logo.png",
  "description": "Highlights the syntax of the conhos.yml file",
  "license": "MIT",
  "main": "index.js",
  "types": "types.d.ts",
  "engines": {
    "vscode": "^1.50.0"
  },
  "keywords": [
    "docker",
    "compose",
    "container",
    "containers",
    "cloud",
    "hosting"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/kolserdav/conhos-vscode"
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "dev": "webpack --mode development --watch",
    "build": "rimraf dist/* && webpack --mode production",
    "scripts": "node ./dist/scripts.js",
    "package": "vsce package -o out",
    "publish": "vsce publish ${version} --pat $(cat .azure-dev-api-key)",
    "deploy": "npm run build && npm run pakage && npm publish"
  },
  "categories": [
    "Programming Languages"
  ],
  "contributes": {
    "commands": [],
    "configuration": {
      "type": "object",
      "title": "Conhos Configuration Checker"
    },
    "languages": [
      {
        "id": "yaml",
        "aliases": [
          "YAML",
          "yml"
        ],
        "extensions": [
          "conhos.yml",
          "conhos.yaml"
        ],
        "configuration": "./language-configuration.json"
      }
    ],
    "grammars": [
      {
        "language": "yaml",
        "path": "./syntaxes/yml.tmLanguage.json",
        "scopeName": "source.yaml"
      }
    ]
  },
  "activationEvents": [
    "onLanguage:yaml"
  ],
  "devDependencies": {
    "@types/node": "^22.5.4",
    "@typescript-eslint/eslint-plugin": "^8.4.0",
    "@typescript-eslint/parser": "^8.4.0",
    "commander": "^12.1.0",
    "eslint": "^9.10.0",
    "eslint-plugin-prettier": "^5.2.1",
    "ts-loader": "^9.5.1",
    "vscode": "^1.1.37",
    "webpack": "^5.94.0",
    "webpack-cli": "^5.1.4",
    "webpack-dev-server": "^5.1.0"
  },
  "dependencies": {
    "cache-changed": "^1.3.2",
    "rimraf": "^6.0.1",
    "vscode-languageclient": "^9.0.1",
    "vscode-languageserver": "^9.0.1",
    "vscode-languageserver-textdocument": "^1.0.12",
    "yaml": "^2.5.1"
  }
}
