{
  "name": "conhos-vscode",
  "displayName": "conhos-vscode",
  "description": "Highlights the syntax of the conhos.yml file",
  "version": "0.0.1",
  "main": "index.js",
  "engines": {
    "vscode": "^1.92.0"
  },
  "scripts": {
    "dev": "webpack --mode development --watch",
    "build": "rimraf dist/* && webpack --mode production --devtool hidden-source-map"
  },
  "categories": [
    "Programming Languages"
  ],
  "contributes": {
    "commands": [{
      "command": "extension.checkTemplate",
      "title": "Check Template Fields"
    }],
    "languages": [
      {
        "id": "yaml",
        "aliases": [
          "YAML",
          "yml"
        ],
        "extensions": [
          ".yml .yaml"
        ],
        "configuration": "./language-configuration.json"
      }
    ],
    "grammars": [
      {
        "language": "yaml",
        "path": "./syntaxes/yml.tmLanguage.json",
        "scopeName": "conhos.yml conhos.yaml"
      }
    ]
  },
  "activationEvents": [
    "onLanguage:yaml",
    "onCommand:extension.checkTemplate"
  ],
  "devDependencies": {
    "@types/node": "^22.5.4",
    "eslint": "^9.10.0",
    "ts-loader": "^9.5.1",
    "vscode": "^1.1.37",
    "webpack": "^5.94.0",
    "webpack-cli": "^5.1.4",
    "webpack-dev-server": "^5.1.0"
  },
  "dependencies": {
    "rimraf": "^6.0.1"
  }
}
