{
	"$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
	"name": "conhos",
	"main": "main",
	"patterns": [
		{
			"include": "#keywords"
		},
		{
			"include": "#strings"
		}
	],
	"repository": {
		"keywords": {
			"patterns": [{
				"name": "keyword.control.yml",
				"match": "\\b(if|while|for|return)\\b"
			}]
		},
		"strings": {
			"name": "string.quoted.double.yml",
			"begin": "\"",
			"end": "\"",
			"patterns": [
				{
					"name": "constant.character.escape.yml",
					"match": "\\\\."
				}
			]
		}
	},
	"properties": {
            "yamlTemplateChecker.requiredFields": {
                "type": "array",
                "default": ["field1", "field2", "field3"],
                "description": "List of required fields in the YAML template."
            }
        }
	,
	"scopeName": "conhos.yml conhos.yaml"
}